<% layout("/layouts/boilerplate") %>
    

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Detail's : </h3>
        </div>

        
    <div class="card col-6 offset-3 show-card" style="width: 35rem; ">
        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="Listings_image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listings.title %></b><br>
                 <%= listings.description %>   <br>
                &#8377; 
                <% if (listings.price) { %>
                 <%= listings.price.toLocaleString("en-IN") %> / Night 
                <% } else { %>
                Price not available
                <% } %>  <br>
                <%= listings.location %>   <br>
                <%= listings.country %>    <br>
            </p>

        </div>
    </div>
     <div class="btns mb-5">
        <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    
        <form method="POST" action="/listings/<%= listings._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
     </div>
    
</div>
