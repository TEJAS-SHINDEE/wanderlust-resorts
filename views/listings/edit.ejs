<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2" >
        <h3>Edit Your Listing's</h3>
        <form method="POST" 
                action="/listings/<%= listing._id%>?_method=PUT" 
                novalidate class="needs-validation"
                enctype="multipart/form-data"
                >
            <div class="mb-3 ">
                <label for="title" class="form-lablel"></label>
                <input name="listing[title]" 
                placeholder="Enter Title"  
                value="<%= listing.title %>" 
                type="text" class="form-control" required>
                <div class="invalid-feedback">Price Should be Valid</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3 ">
                <label for="description" class="form-lablel"></label>
                <textarea class="form-control" 
                    name="listing[description]" 
                    type="text" required>
                    <%= listing.description %>
                </textarea>
                <div class="invalid-feedback">Please Enter Valid Country</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3">
                Original Listing Image
                <img src="<%= originalImageUrl %>" alt="">
            </div>

            <div class="mb-3 ">
                <label for="image" class="form-lablel">Upload New Image</label>
                <input class="form-control" 
                name="listing[image]" 
                type="file" 
                >
                <div class="invalid-feedback">Price Should be Valid</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>

           <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lablel">Price</label>
                <input class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required> 
                <div class="invalid-feedback">Please Enter Valid Country</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="location" class="form-lablel">Location</label>
                <input class="form-control" name="listing[location]" value="<%= listing.location %>" type="text" required>
                <div class="invalid-feedback">Please Enter Location</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>
            </div>

            <div class="mb-3 ">
                <label for="Country" class="form-lablel">Country</label>
                <input class="form-control" name="listing[country]" value="<%= listing.country %>" required>
                <div class="invalid-feedback">Please Enter Valid Country</div>
                <div class="valid-feedback">Looks Good!</div>
            </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br>
    </form>
    </div>
</div>
    
<script src="/js/script.js"></script>
